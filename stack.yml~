version: "3" 

services:
#  graphql:
#    image: graphql
#    ports:
#      - 4000:4000
#    links:
#      - "mongo:mongodb"

  apache:
      image: php:7.2-apache
      ports:
        - 80:80
      volumes:
        - ./ui/:/var/www/html
#      links:
#        - "graphql:graphql"

  mongo:
    container_name: mongo
    image: mongo
    ports:
      - 27017:27017
    volumes:
      - ./mongodata:/data/db
    environment:
      MONGO_INITDB_ROOT_USERNAME: root
      MONGO_INITDB_ROOT_PASSWORD: example

  mongo-express:
    image: mongo-express
    depends_on:
      - mongo
    ports:
      - 8081:8081
    environment:
      ME_CONFIG_MONGODB_SERVER: mongo
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
      ME_CONFIG_MONGODB_ADMINPASSWORD: example

    
